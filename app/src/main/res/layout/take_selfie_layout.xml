<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_weight="0.5"
        android:id="@+id/selfie_hint_imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/selfie_hint_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/take_selfie_hint_textview"
        android:id="@+id/textView"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.25"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/camera_imageButton"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/button_camera"
        android:layout_marginTop="10dp"
        android:onClick="onEvaluateHairLoss"
        android:background="#d7ffeb"
        android:layout_weight="0.25"/>
</LinearLayout>