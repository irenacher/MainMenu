<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:focusableInTouchMode="true"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/firstname_layout"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="First name *"
                    android:id="@+id/textView3"
                    style="@style/RequestFormTextView"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editFirstNameText"
                    android:layout_weight="1"
                    android:singleLine="true"
                    style="@style/RequestFormEditView"
                    android:background="@drawable/edittext_style"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:id="@+id/lastname_layout"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Last name *"
                    android:id="@+id/textView4"
                    style="@style/RequestFormTextView"/>

                 <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editLastNameText"
                    android:layout_weight="1"
                     android:singleLine="true"
                     style="@style/RequestFormEditView"
                     android:background="@drawable/edittext_style"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:id="@+id/email_layout"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Email *"
                    android:id="@+id/email_textView"
                    style="@style/RequestFormTextView"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_editText"
                    android:layout_weight="1"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    style="@style/RequestFormEditView"
                    android:background="@drawable/edittext_style"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone_layout"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Phone *"
                    android:id="@+id/phone_textView"
                    style="@style/RequestFormTextView"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:layout_weight="1"
                    android:id="@+id/phone_editText"
                    android:singleLine="true"
                    style="@style/RequestFormEditView"
                    android:background="@drawable/edittext_style"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/city_layout"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="City *"
                    android:id="@+id/city_textView"
                    style="@style/RequestFormTextView"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/city_editText"
                    android:layout_weight="1"
                    android:singleLine="true"
                    style="@style/RequestFormEditView"
                    android:background="@drawable/edittext_style"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/state_layout"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="State *"
                    android:id="@+id/state_textView"
                    style="@style/RequestFormTextView"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/state_editText"
                    android:layout_weight="1"
                    android:singleLine="true"
                    style="@style/RequestFormEditView"
                    android:background="@drawable/edittext_style"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ethnicity_layout"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Ethnicity"
                    android:id="@+id/ethnicity_textView"
                    style="@style/RequestFormTextView"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/ethnicity_spinner"
                    android:background="@android:drawable/editbox_dropdown_light_frame"
                    android:paddingLeft="4dp"
                    android:popupBackground="#c1ffef"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gender_layout"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:id="@+id/gender_textView"
                    style="@style/RequestFormTextView"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:id="@+id/gender_spinner"
                      android:background="@android:drawable/editbox_dropdown_light_frame"
                    android:paddingLeft="4dp"
                    android:popupBackground="#c1ffef"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/haircolor_layout"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Hair Color"
                    android:id="@+id/hcolor_textView"
                    style="@style/RequestFormTextView"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:id="@+id/hcolor_spinner"
                     android:background="@android:drawable/editbox_dropdown_light_frame"
                    android:paddingLeft="4dp"
                    android:popupBackground="#c1ffef"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hairtype_layout"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Hair Type"
                    android:id="@+id/htype_textView"
                    style="@style/RequestFormTextView"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:id="@+id/htype_spinner"
                    android:background="@android:drawable/editbox_dropdown_light_frame"
                    android:paddingLeft="4dp"
                    android:popupBackground="#c1ffef"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/concerns_layout"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Specific areas of concern"
                    android:id="@+id/concerns_textView"
                    android:layout_weight="1"
                    style="@style/RequestFormTextView"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/concerns_editText"
                    android:layout_weight="1"
                    android:hint="hairline, crown, full head"
                    android:singleLine="true"
                    style="@style/RequestFormEditView"
                    android:background="@drawable/edittext_style"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/user_consent_layout"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Any previous hair restoration treatments?"
                    android:id="@+id/treatments_textView"
                    android:layout_weight="1"
                    style="@style/RequestFormTextView"
                    />

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/treatments_switch"
                    android:layout_weight="1"
                    />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/button_email"
                android:id="@+id/imageButton"
                android:paddingBottom="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:background="#d7ffeb"
                android:layout_marginTop="15dp"
                android:onClick="onSubmitRequest"/>

        </LinearLayout>

    </LinearLayout>
