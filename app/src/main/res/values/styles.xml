<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MenuButtonStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">left|center</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">#d7ffeb</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <style name="NorwoodImageButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType" >fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:onClick">onNorwoodButtonClick</item>
        <item name="android:background">#d7ffeb</item>
     </style>

    <style name="RequestFormTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="RequestFormEditView">
         <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.MyCompatTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/winBackground</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/background</item>
        <item name="background">@color/background</item>
    </style>

    <color name="winBackground">#dcf4e0</color>
    <color name="background">#55a51c</color>

</resources>
